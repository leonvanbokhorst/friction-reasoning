# Environment template
# Copy to `.env` and fill in actual secrets before running workflows.

# OpenAI / LiteLLM provider credentials (used for question + agent generation)
OPENAI_API_KEY="sk-your-openai-key"
LITELLM_API_KEY=""
# Optional: override LiteLLM base URL or default model
LITELLM_API_BASE=""
LITELLM_DEFAULT_MODEL="openai/gpt-4o-mini"

# Hugging Face token for dataset/model uploads
HUGGINGFACE_API_KEY="hf_your_token"
HUGGINGFACE_UPLOAD_REPO="leonvanbokhorst/friction-disagreement-v2"

# Optional: local Ollama base for evaluation
OLLAMA_API_BASE="http://localhost:11434"

# Logging / tracking
WANDB_API_KEY=""
